# Welcome to Sonic Pi

num = 21 #start at 1!

87.times do
  play (num)
  sleep 0.5
  num = num + 1 #num = 1 + 1
end
# Welcome to Sonic Pi

num = 108 #start at 1!

87.times do
  play (num)
  sleep 0.25
  num = num - 1 #num = 1 + 1
end

num = 21 #start at 1!

87.times do
  play (num)
  sleep 0.125
  num = num + 1 #num = 1 + 1
end
